// 网址管理对话框模板
IDD_BOOKMARK_DIALOG DIALOG 0, 0, 400, 300
STYLE DS_MODALFRAME | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "网址收藏管理"
FONT 8, "MS Shell Dlg"
BEGIN
    LISTBOX         IDC_BOOKMARK_LIST, 10, 10, 380, 150, LBS_NOINTEGRALHEIGHT | WS_VSCROLL | WS_BORDER
    LTEXT           "名称:", IDC_BOOKMARK_NAME_LABEL, 10, 170, 60, 20
    EDITTEXT        IDC_BOOKMARK_NAME, 80, 170, 300, 20, ES_AUTOHSCROLL
    LTEXT           "URL:", IDC_BOOKMARK_URL_LABEL, 10, 200, 60, 20
    EDITTEXT        IDC_BOOKMARK_URL, 80, 200, 300, 20, ES_AUTOHSCROLL
    PUSHBUTTON      "添加", IDC_BOOKMARK_ADD, 10, 240, 70, 25
    PUSHBUTTON      "更新", IDC_BOOKMARK_UPDATE, 90, 240, 70, 25
    PUSHBUTTON      "删除", IDC_BOOKMARK_DELETE, 170, 240, 70, 25
    PUSHBUTTON      "关闭", IDC_BOOKMARK_CLOSE, 310, 240, 70, 25
END

