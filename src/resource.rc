    PUSHBUTTON      "更新", IDC_SHORTCUT_UPDATE, 90, 240, 70, 25
    PUSHBUTTON      "删除", IDC_SHORTCUT_DELETE, 170, 240, 70, 25
    PUSHBUTTON      "关闭", IDC_SHORTCUT_CLOSE, 310, 240, 70, 25
END

