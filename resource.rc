#include <windows.h>

// 网址管理对话框资源ID
#define IDD_BOOKMARK_DIALOG        2000
#define IDC_BOOKMARK_LIST          2001
#define IDC_BOOKMARK_NAME          2002
#define IDC_BOOKMARK_URL           2003
#define IDC_BOOKMARK_ADD           2004
#define IDC_BOOKMARK_UPDATE        2005
#define IDC_BOOKMARK_DELETE        2006
#define IDC_BOOKMARK_CLOSE         2007
#define IDC_BOOKMARK_NAME_LABEL    2012
#define IDC_BOOKMARK_URL_LABEL     2013

// 字符串表资源ID
#define IDS_BOOKMARK_ADD           2008
#define IDS_BOOKMARK_UPDATE        2009
#define IDS_BOOKMARK_DELETE        2010
#define IDS_BOOKMARK_CLOSE         2011

// 网址管理对话框模板
IDD_BOOKMARK_DIALOG DIALOG 0, 0, 400, 300
STYLE DS_MODALFRAME | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "网址收藏管理"
FONT 8, "MS Shell Dlg"
BEGIN
    LISTBOX         IDC_BOOKMARK_LIST, 10, 10, 380, 150, LBS_NOINTEGRALHEIGHT | WS_VSCROLL | WS_BORDER
    LTEXT           "名称:", IDC_BOOKMARK_NAME_LABEL, 10, 170, 60, 20
    EDITTEXT        IDC_BOOKMARK_NAME, 80, 170, 300, 20, ES_AUTOHSCROLL
    LTEXT           "URL:", IDC_BOOKMARK_URL_LABEL, 10, 200, 60, 20
    EDITTEXT        IDC_BOOKMARK_URL, 80, 200, 300, 20, ES_AUTOHSCROLL
    PUSHBUTTON      "添加", IDC_BOOKMARK_ADD, 10, 240, 70, 25
    PUSHBUTTON      "更新", IDC_BOOKMARK_UPDATE, 90, 240, 70, 25
    PUSHBUTTON      "删除", IDC_BOOKMARK_DELETE, 170, 240, 70, 25
    PUSHBUTTON      "关闭", IDC_BOOKMARK_CLOSE, 310, 240, 70, 25
END

// 字符串表，用于支持UTF-8编码的中文文本
STRINGTABLE
BEGIN
    IDS_BOOKMARK_ADD        "添加"
    IDS_BOOKMARK_UPDATE     "更新"
    IDS_BOOKMARK_DELETE     "删除"
    IDS_BOOKMARK_CLOSE      "关闭"
END